{
	"name": "carnet-de-bord",
	"version": "1.4.1",
	"engines": {
		"node": "16",
		"npm": "7"
	},
	"private": true,
	"repository": "git@github.com:SocialGouv/carnet-de-bord.git",
	"author": "Incubateur des Minist√®res Sociaux <dsi-incubateur@sg.social.gouv.fr> (https://incubateur.social.gouv.fr)",
	"bugs": "https://github.com/SocialGouv/carnet-de-bord/issues",
	"license": "Apache-2.0",
	"scripts": {
		"k8s": "yarn --silent --cwd .k8s",
		"hasura": "yarn hasura:console",
		"hasura:console": "cd hasura && hasura console",
		"hasura:seed": "cd hasura && hasura seed apply",
		"hasura:migrate": "cd hasura && hasura migrate apply",
		"compose": "docker-compose up --build",
		"dev": "svelte-kit dev",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. src && eslint src .",
		"lint:fix": "prettier --check --plugin-search-dir=. src && yarn lint --fix --cache",
		"lint:pre-commit": "yarn lint:fix",
		"format": "prettier --write --plugin-search-dir=. .",
		"codegen": "yarn run graphql-codegen --config codegen.cjs"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.1.0",
		"@commitlint/config-conventional": "^13.1.0",
		"@graphql-codegen/cli": "2.1.1",
		"@graphql-codegen/typed-document-node": "^2.1.2",
		"@graphql-codegen/typescript": "2.1.2",
		"@graphql-codegen/typescript-operations": "2.1.2",
		"@graphql-codegen/urql-svelte-operations-store": "^1.1.2",
		"@sveltejs/kit": "next",
		"@tailwindcss/forms": "^0.3.3",
		"@tailwindcss/typography": "^0.4.1",
		"@types/cookie": "^0.4.0",
		"@types/jsonwebtoken": "^8.5.5",
		"@types/nodemailer": "^6.4.4",
		"@types/rasha": "^1.2.3",
		"@types/tailwindcss": "^2.2.1",
		"@typescript-eslint/eslint-plugin": "^4.30.0",
		"@typescript-eslint/parser": "^4.30.0",
		"autoprefixer": "^10.3.3",
		"cssnano": "^5.0.8",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.0",
		"hasura-cli": "^2.0.7",
		"husky": "^7.0.2",
		"lint-staged": "^11.1.2",
		"postcss": "^8.3.6",
		"postcss-load-config": "^3.1.0",
		"prettier": "~2.3.2",
		"prettier-plugin-svelte": "^2.3.1",
		"remixicon": "^2.5.0",
		"svelte": "3.42.4",
		"svelte-check": "^2.2.5",
		"svelte-preprocess": "^4.8.0",
		"tailwindcss": "^2.2.7",
		"tslib": "^2.3.1",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"@gouvfr/dsfr": "^1.1.0",
		"@sveltejs/adapter-node": "^1.0.0-next.43",
		"@urql/core": "^2.3.1",
		"@urql/svelte": "^1.3.0",
		"cookie": "^0.4.1",
		"dotenv": "^10.0.0",
		"fast-deep-equal": "^3.1.3",
		"fnv-plus": "^1.3.1",
		"graphql": "^15.5.1",
		"jsonwebtoken": "^8.5.1",
		"jwt-decode": "^3.1.2",
		"knex": "^0.95.10",
		"nodemailer": "^6.6.3",
		"pg": "^8.7.1",
		"rasha": "^1.2.5",
		"uuid": "^8.3.2"
	},
	"type": "module",
	"lint-staged": {
		"*.{ts, js,svelte}": [
			"prettier --write --plugin-search-dir=.",
			"eslint --ignore-path .gitignore --fix ."
		],
		"*.{json,css,postcss,html,md}": [
			"prettier --write --plugin-search-dir=."
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint:pre-commit",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
